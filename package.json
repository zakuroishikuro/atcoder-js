{
  "name": "atcoderlet",
  "license": "MIT",
  "version": "0.1.0",
  "dependencies": {
    "esbuild": "^0.15.8",
    "jest": "v28.1.3",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0"
  },
  "scripts": {
    "serve": "node _src/serve.js",
    "test": "jest --watch --testMatch '<rootDir>/problems/**/*.[jt]s?(x)'",
    "min": "esbuild `find problems -type f -exec stat -c '%X%n' {} \\; | sort | tail -1 | cut -c 11-` --minify-syntax",
    "build:bookmarklet": "esbuild _src/_bookmarklet.js --minify-whitespace --outfile=bookmarklet.js"
  }
}
