{
  "configurations": [
    {
      "name": "Launch TypeScript Using ts-node",
      "type": "node",
      "request": "launch",
      "env": { "NODE_ENV": "test" },
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "runtimeArgs": ["--stack-size=99900", "--nolazy", "-r", "ts-node/register"],
      "program": "${file}"
    }
  ]
}
